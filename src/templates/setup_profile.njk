{% extends "layouts/base.njk" %}

{% import "macros/components.njk" as components %}

{%
  set title = "Login | " + title
%}

{% block content %}
  <section class="container">
    <div class="flex items-center justify-center min-h-screen w-full">
      <div class="bg-white p-6 pb-8 sm:p-12 mx-4 mt-20 rounded-lg shadow-lg max-w-md text-center relative">
        <div class="w-36 h-36 mx-auto -mt-24 md:-mt-32 mb-6 border-8 border-white rounded-full overflow-hidden shadow-lg">
          <img class="object-cover" src="https://lh3.googleusercontent.com/ogw/ADea4I4XU7oONxPL-ph_Xoj-X0J1XpL-KhYvIUBowIRIFg=s1200-c-mo" alt="username">
        </div>
        <div class="absolute top-1 left-5">
          <a href="login.html" class="inline-flex items-center justify-center relative overflow-hidden mx-auto focus:outline-none transition ease-in-out duration-300 p-1.5 font-semibold bg-gray-100 hover:bg-gray-200 focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 text-gray-600 rounded-md mt-4 group">
            {{ components.icons(icons.left) }}
          </a>
        </div>
        <div class="mb-4">
          <h1 class="text-2xl sm:text-3xl font-semibold text-gray-700 mb-1">Lengkapi data!</h1>
          <p class="text-gray-500 leading-4 text-sm">
            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Possimus sapiente aperiam eius assumenda alias in.
          </p>
        </div>
        <form class="grid grid-cols-1 gap-3 mt-6 text-left">
          <label class="block">
            <span class="text-gray-700">Full name</span>
            <input type="text" name="full_name" class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
          </label>
          <label class="block">
            <span class="text-gray-700">Date birth</span>
            <input type="date" name="date_birth" class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
          </label>
          <label class="block">
            <span class="text-gray-700">Kelas</span>
            <select class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
              <option>XII MIPA 1</option>
              <option>XII MIPA 2</option>
              <option>XII MIPA 3</option>
              <option>XII MIPA 4</option>
              <option>XII MIPA 5</option>
              <option>XII MIPA 6</option>
              <option>XII IPS 1</option>
              <option>XII IPS 2</option>
              <option>XII IPS 3</option>
              <option>XII IPS 4</option>
              <option>XII Bahasa</option>
            </select>
          </label>
          <label class="inline-flex items-center">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-offset-0 focus:ring-blue-200 focus:ring-opacity-50" />
            <span class="ml-2">Ya, saya masih bersekolah di smanda</span>
          </label>
          {{ components.a("waiting_approval.html", "Submit", "r", icons.plane) }}
        </form>
      </div>
    </div>
  </section>
{% endblock %}