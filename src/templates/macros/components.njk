{% macro a(to="#", name="", position="l", path="") %}
  <a href="{{to}}" class="inline-flex items-center justify-center relative overflow-hidden mx-auto focus:outline-none transition ease-in-out duration-300 px-6 py-2.5 font-semibold bg-blue-500 hover:bg-blue-600 focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 text-white rounded-md mt-4">
    {% if position == "l" %}
      {{ icons(path, 24, "mr-2") }}
    {% endif %}
    {{ name }}
    {% if position == "r" %}
      {{ icons(path, 24, "ml-2") }}
    {% endif %}
  </a>
{% endmacro %}

{% macro button(name="", position="l", path="") %}
  <button type="button" class="inline-flex items-center justify-center relative overflow-hidden mx-auto focus:outline-none transition ease-in-out duration-300 px-6 py-2.5 font-semibold bg-blue-500 hover:bg-blue-600 focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 text-white rounded-md mt-4">
    {% if position == "l" %}
      {{ icons(path, 24, "mr-2") }}
    {% endif %}
    {{ name }}
    {% if position == "r" %}
      {{ icons(path, 24, "ml-2") }}
    {% endif %}
  </button>
{% endmacro %}

{% macro icons(path="", size=24, class="") %}
  {% if path != "" %}
    <svg xmlns="http://www.w3.org/2000/svg" class="{{class}}" width="{{size}}" height="{{size}}" viewBox="0 0 24 24" fill="currentColor">
      <path d="{{path}}"></path>
    </svg>
  {% endif %}
{% endmacro %}